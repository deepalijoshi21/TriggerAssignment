-----------------AssignOwnerToAccount_Handler---------
public class AssignOwnerToAccount {
    public static void afterInsertAccount(List<Account> AccountList){
        List<Account> acclist=new List<Account>();
        Id owner = [Select id from user where username = 'hema.rawat@gmail.com'];
        for(Account ac: AccountList){
              if(owner != null && ac.Industry = 'Education')
                account acc = new account();
                acc.id = ac.Id;
                acc.OwnerId= owner;
                acclist.add(acc); 
        }
        if(!acclist.isEmpty()){
          update acclist;
         }
    }
    public static void afterUpdateAccount(List<Account> AccountList){
        for(Account ac: AccountList){
              ac.OwnerId='Deepali';
        }
     }
}


---------Trigger------------
trigger AccountTrigger on Account (before update,after Insert) {
  if(trigger.isAfter && trigger.isInsert){
       AssignOwnerToAccount.afterInsertAccount(trigger.new);
     }
   if(trigger.isBefore && trigger.isUpdate){
       AssignOwnerToAccount.afterUpdateAccount(trigger.new);
    }
}
