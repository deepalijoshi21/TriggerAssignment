-----------------------DeleteChildContactOfAccount_Handler--------------
public class DeleteChildContactOfAccount_Handler {
    public static void deleteChildContact(List<Account> deletedAcclist){
          List<Id> accountIds = new List<Id>();
          try{
            for (Account account : deletedAcclist) {
                accountIds.add(account.Id);
            }

            List<Contact> childContactslist = [SELECT Id, AccountId FROM Contact WHERE AccountId IN :accountIds];
            if(!childContactslist.isEmpty()){
                delete childContactslist;
            }
            List<Opportunity> childOpportunitylist = [SELECT Id, AccountId FROM Opportunity WHERE AccountId IN :accountIds];
            if(!childOpportunitylist.isEmpty()){
                delete childOpportunitylist;
            }
        } 
        catch(Exception ex){
          system.debug('Error occur ==' +ex.getmessage());
        }
    }
}

---------------Trigger-----------
trigger DeleteChildContactOfAccount on Account (before delete) {
    DeleteChildContactOfAccount_Handler.deleteChildContact(trigger.old);

}
